<?xml version="1.0" encoding="utf-8"?>
<layout>
    <row weight="6">
		<touch id="touch"
			ondown="down"
			onup="up"
			ontap="tap" 
			ondoubletap="double" 
			ontouchdelta="delta"
			color="transparent"
			text="Touch!" />
	  </row>
	  <row weight="wrap">
	  <button text="T" ondown="twerk_start" onup="twerk_stop" weight="2" color="purple" />
		<button text="L" ondown="clickstart" onup="clickend" weight="5" />
		<button text="R" ondown="rclickstart" onup="rclickend" weight="5" />
		<button text="C" ontap="crouchtoggle" weight="2" color="green" id="crouchbtn"/>
	  </row>

	  <row weight="1">
		<button icon="rwd" ontap="menu" color="black" />
		<button image="Backpack.png" scale="fit" ontap="inventory" color="blue" />
		<button image="Book.png" scale="fit" ontap="quests" color="blue" />
	  </row>

	  <row weight="1">
        <button icon="docleft" ontap="tbdown" color="purple" />
		<button icon="docright" ontap="tbup" color="purple" />
		<button image="Stone_Pickaxe.png" scale="fit" ondown="minedown" onup="mineup" color="yellow" />
	  </row>
	  <row weight="1">
		<button icon="arrowup" ondown="rundown" onup="runup" color="orange" />
	  </row>
	  <row weight="1">
		<button icon="arrowleft" ondown="leftdown" onup="leftup" color="orange" />
		<button icon="arrowdown" ondown="reversedown" onup="reverseup" color="orange" />
		<button icon="arrowright" ondown="rightdown" onup="rightup" color="orange" />
	  </row>
</layout>